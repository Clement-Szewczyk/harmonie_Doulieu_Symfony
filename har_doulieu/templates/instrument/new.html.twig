{% extends 'base.html.twig' %}

{% block title %}Ajout Instrument{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/instrument.css') }}">
{% endblock %}

{% block body %}
    {% include "navbar.html.twig" %}
    <h1>Ajouter un instrument</h1>

    {{ include('instrument/_form.html.twig') }}

    

    <!-- Affiche résultat addflash error-->

    {% for message in app.flashes('error') %}
        <div class="flash-error">
            {{ message }}
        </div>
    {% endfor %}

    <a href="{{ path('app_instrument_index') }}" class="back">Retour à la liste</a>

{% endblock %}
